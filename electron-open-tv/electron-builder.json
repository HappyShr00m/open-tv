{
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../ng-open-tv/dist/ng-open-tv",
      "filter": ["**/*"],
      "to": "dist"
    }
  ],
  "extraResources": [
    {
      "from": "../../libs",
      "to": "libs"
    }
  ],
  "win": {
    "target": [
      "squirrel"
    ]
  },
  "squirrelWindows":
  {
    "iconUrl": "https://upload.wikimedia.org/wikipedia/commons/4/48/BLANK_ICON.png"
  },
  "appx": {
    "applicationId": "OpenTV",
    "publisher": "CN=AppModelSamples, OID.2.25.311729368913984317654407730594956997722=1"
  },
  "mac": {
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ]
  }
}
